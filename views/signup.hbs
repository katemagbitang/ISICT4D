<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    
    <script src="/js/signup.js" type="text/javascript"></script>
    <script src="/js/validator.min.js" type='text/javascript'></script>
    
    <title>Sign Up | Chapter One</title>
</head>
<body>
    {{!-- NAVBARS START --}}
    {{!-- <div id= "navvisit">
        {{> navvisit}}
    </div>
    <div id = "navadmin">
         {{> navadmin}}
    </div> --}}
    <div id = "navuser">
       {{> nav}}
    </div>
    {{!-- NAVBARS END --}}
    <div id="signup">
        <!-- <h4 class="text-center text-white pt-5">Sign Up form</h4> -->
        <br>
        <br>
        <div class="container">
            <div id="signup-row" class="row justify-content-center align-items-center">
                <div id="signup-column" class="col-md-6">
                    <div id="signup-box" class="col-md-12">
                        <form id="signup-form" class="form" action="" method="post">
                            <h3 class="text-center " style="color:#DB4E35">Sign Up</h3>
                            <div class="form-group">
                                <label for="fname" style="color:#DB4E35">First Name:</label><br>
                                <input type="text" name="fname" id="fname" class="form-control" placeholder="First Name" required>
                                <p id="fNameError" class="error">{{fNameError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="lname" style="color:#DB4E35">Last Name:</label><br>
                                <input type="text" name="lname" id="lname" class="form-control" placeholder="Last Name" required>
                                <p id="lNameError" class="error">{{lNameError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="username" style="color:#DB4E35">Username:</label><br>
                                <input type="text" name="username" id="username" class="form-control" minlength="4" maxlength="15" placeholder="Username" required>
                                <p id="usernameError" class="error">{{usernameError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="email" style="color:#DB4E35">Email Address:</label><br>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                                <p id="emailError" class="error">{{emailError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="password" style="color:#DB4E35">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control" minlength="5" placeholder="Password" required>
                                <p id="pwError" class="error">{{pwError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="password" style="color:#DB4E35">Confirm Password:</label><br>
                                <input type="password" name="cpassword" id="cpassword" class="form-control" minlength="5" placeholder="Confirm Password" required>
                                <p id="errorcpassword" class="error">{{errorcpassword}}</p>
                            </div>
                            <div class="form-group">
                                {{!-- <label for="submit" class="text-danger">{{{err}}}</label><br> --}}
                                <input type="submit" name="submit" id='submit' class="btn text-white btn-md" style="background-color:#DB4E35" value="Submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>