                    <form action="/search" method="POST">
                        <input type="text" name="search" placeholder="  Search posts using tags" id="search" style="width: 100%;height:5vh;font-family: 'Lato';">
                        <button type="submit" class="logbutton">Search</button>
                    </form>
                </div>
            </div>
            
            
            <div id="forumwrap">
                {{#each posts}}
                    {{>forumpost}}
                {{/each}}
            </div>
            

        </section>

