<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}

    <script src="/js/login.js" type="text/javascript"></script>

    <title>Login | Saranggola</title>
</head>
<body>
    
    <div id = "navuser">
       {{> nav}}
    </div>
    {{!-- NAVBARS END --}}
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/login" method="post">
                            <h3 class="text-center" style="color:#DB4E35">Login</h3>
                            <div class="form-group">
                                <label for="username" style="color:#DB4E35">Username:</label><br>
                                <input type="text" name = "username" id="username" class="form-control username" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <label for="password" style="color:#DB4E35">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <label for="submit" class="text-danger">{{{err}}}</label><br>
                                <input type="submit" name="submit" id = "login-btn" class="btn text-white btn-md" style="background-color:#DB4E35" value="Submit" >
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>
</html>